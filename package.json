{
  "name": "img-dl",
  "displayName": "img-dl",
  "version": "0.0.1",
  "description": "    A lightweight browser extension for effortless image downloading. Save single or multiple images from any webpage with one click, supporting batch downloads for quick and easy collection.",
  "author": "PenBo1",
  "scripts": {
    "dev": "plasmo dev",
    "build": "plasmo build",
    "package": "plasmo package",
    "dev:firefox": "plasmo dev --target=firefox-mv3",
    "build:firefox": "plasmo build --target=firefox-mv3",
    "package:firefox": "plasmo package --target=firefox-mv3"
  },
  "dependencies": {
    "@plasmohq/storage": "1.15.0",
    "@radix-ui/react-checkbox": "1.1.2",
    "@radix-ui/react-progress": "1.1.2",
    "@radix-ui/react-scroll-area": "1.2.2",
    "@radix-ui/react-select": "2.1.2",
    "@radix-ui/react-switch": "1.1.2",
    "plasmo": "0.90.5",
    "react": "18.2.0",
    "react-dom": "18.2.0"
  },
  "devDependencies": {
    "@ianvs/prettier-plugin-sort-imports": "4.1.1",
    "@types/chrome": "0.0.258",
    "@types/node": "20.11.5",
    "@types/react": "18.2.48",
    "@types/react-dom": "18.2.18",
    "autoprefixer": "10.4.19",
    "postcss": "8.4.38",
    "prettier": "3.2.4",
    "tailwindcss": "3.4.3",
    "typescript": "5.3.3"
  },
  "manifest": {
    "permissions": [
      "downloads",
      "storage",
      "activeTab",
      "scripting"
    ],
    "host_permissions": [
      "<all_urls>"
    ],
    "browser_specific_settings": {
      "gecko": {
        "id": "img-dl@example.local"
      }
    }
  }
}
